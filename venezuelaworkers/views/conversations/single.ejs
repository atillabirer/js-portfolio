<%- include('../top') %>
<div class="container">
    <div class="row">
        <div class="col">
            <div class="card">
                <div class="card-header">
                    <h3>Messages for <%= messages[0].title %></h3>
                </div>
                <div class="card-body">
                    <form action="/conversations/<%= conversation_id %>" method="POST">
                        <div class="form-group"> 
                        <textarea id="message" name="message" cols="30" rows="10" class="form-control"></textarea>
                        </div>
                        <div class="form-group">
                        <button class="btn btn-success" class="form-control">Send</button>
                        </div>
                    </form>
                    <ul class="list-group">
                        <% if(messages) { %>
                            <% messages.forEach((message) => { %>
                                <b><%= message.username  %>:</b>
                                <p><%= message.message %><p>
                            <% }) %>
                        <% } else { %>
                            <p>No messages in this conversation.</p>
                        <% } %>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('../bottom') %>
