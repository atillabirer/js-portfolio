<!doctype html>
<html lang="en">
    <head>
        <!-- Required meta tags -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        <!-- Bootstrap CSS -->
        <link rel="stylesheet" href="/stylesheets/bootstrap.css"/> 

        <title>Venezuelaworkers</title>
    </head>
    <body class="mt-5 bg-info">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
            <a class="navbar-brand" href="/">Venezuelaworkers</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ml-auto">
                    <% if(locals.message) { %>
                        <li class="nav-item">
                            <span class="navbar-text"><%= message  %></span>
                        </li>
                    <% }  %>
                    <% if(user) { %>
                        
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="menuDropdownLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                 <%= user.username %>
                            </a>
                            <div class="dropdown-menu" aria-labelledby="menuDropdownLink">
                                <a class="dropdown-item" href="/projects/create">Post new project</a>
                                <a class="dropdown-item" href="/projects/mine">My projects</a>
                                <a href="/finances" class="dropdown-item">Financial Dashboard</a>
                                <a class="dropdown-item" href="/bids/mine">My bids</a>
                                <a class="dropdown-item" href="/conversations">My conversations</a>
                                <a class="dropdown-item" href="/users/profile">My profile</a>
                                <a class="dropdown-item" href="/users/logout">Log out</a>
                            </div>
                        </li>
                    <% } else { %>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="loginDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Log in</a>
                            <div class="dropdown-menu" aria-labelledby="loginDropdown">
                                <form action="/users/login" method="POST" class="px-2 py-2">
                                    <div class="form-group">
                                        <input type="text" name="username" class="form-control" placeholder="Username">
                                    </div>
                                    <div class="form-group">
                                        <input type="password" name="password" class="form-control" placeholder="Password">
                                    </div>
                                    <div class="form-group">
                                    <button type="submit" class="btn btn-success">Log in</button>
                                    </div>
                                </form>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="registerDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Register</a>
                            <div class="dropdown-menu block" aria-labelledby="registerDropdown">
                                <form action="/users/register" method="POST" class="px-2 py-2">
                                    <div class="form-group">
                                        <input type="text" name="username" class="form-control" placeholder="Username">
                                    </div>
                                    <div class="form-group">
                                        <input type="password" name="password" class="form-control" placeholder="Password">
                                    </div>
                                    <div class="form-group">
                                        <select id="type" name="type">
                                            <option value="worker">Worker</option>
                                            <option value="hirer">Hirer</option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <button type="submit" class="btn btn-success">Register</button>
                                    </div>
                                </form>
                            </div>
                        </li>
                    <% } %>
                        <li class="nav-item">
                        <a href="/contact" class="nav-link">Contact Us</a>
                        </li>
                </ul>
            </div>
        </nav>

