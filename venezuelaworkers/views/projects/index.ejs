<%- include('../top')  %>
<div class="container">
    <div class="row">
    <div class="col">
        <div class="card mt-5">
            <div class="card-header">
           <h1>All Projects</h1>
            </div>
            <div class="card-body">
             <table class="table">
            <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Price</th>
                <th>Deadline</th>
                <th>Hirer</th>
            </tr>
            </thead>
            <tbody>
             <% if(projects.length < 1)  { %>
        <tr><td>No projects yet.</td></tr>
        <% } else { %>
        <% projects.forEach(function(project) {  %>
        <tr>
            <td><a href="/projects/<%=project.id%>"><%= project.title %></td>
            <td><%= project.description %></td>
            <td><%= project.price %> BCH</td>
            <td><%= project.deadline %></td>
            <td><%= project.hirer %></td>
        </tr>
        <% }) %>
        <% } %>
            </tbody>
        </table>

            
            </div>
        </div>
    </div>
    </div>
</div>
<%- include('../bottom') %>
