<%- include('../top') %>
<div class="container">
<div class="row">
    <div class="col">
        <h1>Post new project</h1>
        <form action="/projects/edit/<%= project.id %>" method="POST">
            <div class="form-group">
                <input type="text" name="title" class="form-control" placeholder="Project title" required value="<%= project.title %>">
            </div>
            <div class="form-group">
                <textarea id="description" name="description" class="form-control" placeholder="Project description"><%= project.description %></textarea>
            </div>
            <div class="input-group">
                <div class="input-group-prepend">
                <span class="input-group-text">BCH</span>
                </div>
                <input type="text" name="price" class="form-control" placeholder="0.05" required value="<%= project.price %>">
            </div>
            <div class="form-group">
            <label for="deadline">Deadline:</label>
            <input type="date" name="deadline" class="form-control" placeholder="Deadline date" required value="<%= project.deadline %>"/>
            </div>
            <div class="form-group">
            <button type="submit" class="btn btn-success">Save</button>
            </div>
        </form>
    
    </div>
</div>
</div>
<%- include('../bottom')  %>
